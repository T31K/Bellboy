<div class="container">
	

	<nav id="gallery">
		 <div class="container mt-3">
			 <div class="row">
				<% hotel.forEach(function(hotel){ %>
					<div class="col-lg-4 col-md-6 mb-4">
               			<div class="card h-100 border-0 rounded-0 shadow-sm">
							<img src="<%=hotel.image %>" class="card-img-top border-0 rounded-0">
							
							<div class="card-body d-flex flex-column text-center border-0">
									<h4 class="card-title"><%=hotel.name%></h4>
									<p class="card-text text-justify w-80 mt-2 mb-2"><%= hotel.description.substring(0,200)%>...</p>
							</div>
							
							<br><br>
							
							<div class="card-footer text-dark text-center mt-5 border-0">
								<p><%= hotel.author.username %></p>
								<a href="/hotel/<%= hotel._id%>" class="btn btn-lightred btn-sm text-center text-light">Read More</a> 
							</div> 
						
						
						</div>
					</div>
				<% }); %>

		</div>
	</div>
</nav>
</div>
