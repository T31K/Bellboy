<%- include("../partials/header") %>
<div class="container">
	<div class="row">

		<div class="col-lg-12 text-center mt-5 mb-4">
				<h1>Create New Hotel</h1>
		</div>

		<div class="form-center">

			<form action="/hotel" method="POST">
				<input class="form-control mb-2" type="text" name="name" placeholder="name">
				<input class="form-control mb-2" type="text" name="image" placeholder="image url">
				<input class="form-control mb-2" type="text" name="description" placeholder="description">
				
				<button class="btn btn-primary btn-block mb-2">Submit</button>
				<button class="btn btn-primary btn-block mb-2" href="/hotel">Back</button>
			</form>
		</div>
	</div>
</div>
