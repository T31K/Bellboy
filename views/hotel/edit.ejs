<%- include("../partials/header") %>
<div class="container">
	<div class="row">

		<div class="col-lg-12 text-center mt-5 mb-4">
				<h1>Edit <%= hotel.name %> Hotel</h1>
		</div>

		<div style="width:35%; margin:0 auto">

			<form action="/hotel/<%= hotel._id %>?_method=PUT" method="POST">
				<input class="form-control mb-2" type="text" name="hotel[name]" value="<%= hotel.name %>">
				<input class="form-control mb-2" type="text" name="hotel[image]" value="<%= hotel.image %>">
				<input class="form-control mb-2" type="text" name="hotel[description]" value="<%= hotel.description %>">
				<button class="btn btn-danger btn-block mb-2">Submit</button>
				<button class="btn btn-danger btn-block mb-2" href="/hotel">Back</button>
			</form>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>